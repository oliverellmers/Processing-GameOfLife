<?xml version="1.0"?>
<config>
	<!--	APP config	-->	
	<param>
		<!-- rows and columns of grid -->
		<key>gridMatrixSize</key> 
		<value>100,100</value>
	</param>
	<param>
		<!-- grid in pixels -->
		<key>gridSize</key>
		<value>1024,1024</value>
	</param>
	<param>
		<!-- number between 1 - 30; 30 is render once per second -->
		<key>renderSpeed</key>
		<value>5</value>
	</param>
	<param>
		<key>cellShape</key>
		<value>rectangle</value> <!-- rectangle or ellipse -->
	</param>	
	<param>
		<key>rlePath</key>
		<value>data/rle</value>
	</param>
	<!--	LEMUR config	-->
	<lemurConfig>
		<!-- enter the root for the pad buttons-->
		<param>
			<key>padButtonName</key>
			<value>SwitchPad/btn</value>
		</param>
		<param>
			<key>playButton</key>
			<value>btnPlay</value>
		</param>	
		<param>
			<key>clearButton</key>
			<value>btnClear</value>
		</param>			
		<param>
			<key>padDimensions</key>
			<value>9,16</value>
		</param>	
		<param>
			<key>lemurIp</key>
			<value>169.254.175.247</value>
		</param>	
		<param>
			<key>lemurInPort</key>
			<value>8000</value>
		</param>				
		<param>
			<key>lemurPadAddr</key>
			<value>/Pixels/x</value>
		</param>
		<param>
			<key>patternMenuAddr</key>
			<value>mnuPattern</value>
		</param>
		<param>
			<key>patternMenuSelection</key>
			<value>bigGlider,glider,gosperGliderGun,queenBeeLoop,queenBeeShuttle,p246GliderShuttle</value>
		</param>	
		<param>
			<key>patternFileNames</key>
			<value>bigglider.rle,glider.rle,gosperglidergun.rle,queenbeeloop.rle,queenbeeshuttle.rle,p246glidershuttle.rle</value>	
		</param>
	</lemurConfig>
</config>