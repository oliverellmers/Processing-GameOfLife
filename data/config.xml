<?xml version="1.0"?>
<config>
	<!--	APP config	-->	
	<param>
		<!-- rows and columns of grid -->
		<key>gridMatrixSize</key> 
		<value>100,100</value>
	</param>
	<param>
		<!-- grid in pixels -->
		<key>gridSize</key>
		<value>1024,1024</value>
	</param>
	<param>
		<!-- number between 1 - 30; 30 is render once per second -->
		<key>renderSpeed</key>
		<value>5</value>
	</param>
	<param>
		<key>cellShape</key>
		<value>rectangle</value> <!-- rectangle or ellipse -->
	</param>	
	<!--	LEMUR config	-->
	<lemurConfig>
		<!-- enter the root for the pad buttons-->
		<param>
			<key>padButtonName</key>
			<value>CustomButton</value>
		</param>		
		<param>
			<key>padDimensions</key>
			<value>16,9</value>
		</param>	
		<param>
			<key>lemurIp</key>
			<value>169.254.175.247</value>
		</param>	
		<param>
			<key>lemurInPort</key>
			<value>8000</value>
		</param>				
		<param>
			<key>lemurPadAddr</key>
			<value>/Pixels/x</value>
		</param>

	</lemurConfig>
</config>